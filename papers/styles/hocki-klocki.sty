%% --- styles --- %%%

\newcommand{\plainStyle}[1]{#1}

%% ------ %%


%% --- auto-scaling delimiters --- %%

% parentheses ()
\DeclarePairedDelimiter{\parenthesesDelimiter}{(}{)}
\def\pars{\parenthesesDelimiter*}

% braces {}
\DeclarePairedDelimiter{\bracesDelimiter}{\{}{\}}
\def\braces{\bracesDelimiter*}

% brackets []
\DeclarePairedDelimiter{\bracketsDelimiter}{[}{]}
\def\brackets{\bracketsDelimiter*}

% angle brackets <>
\DeclarePairedDelimiter{\anglebracketsDelimiter}{<}{>}
\def\anglebrackets{\anglebracketsDelimiter*}

%% ------ %%


%% --- standard math notation --- %%

\let\set\braces % {1, 2, 3}
\let\range\brackets % [n]

\let\seq\overline % syntactic sequence
\newcommand{\seqI}[2]{\seq{#1}^{\,#2}} % syntactic sequence with index

\DeclareMathOperator{\dom}{dom} % domain of a function or environment

\renewcommand{\natural}{\mathbb{N}} % natural numbers

\newcommand{\powerset}{\mathcal{P}}

\let\union\bigcup
\let\function\rightarrow

